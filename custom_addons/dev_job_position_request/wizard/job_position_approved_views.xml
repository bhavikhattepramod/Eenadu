<?xml version="1.0"?>
<odoo>
    <record id="job_position_approved_form" model="ir.ui.view">
        <field name="name">job.position.approved.form</field>
        <field name="model">job.position.approved</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="job_position_request_ids" widget="many2many_tags"/>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="button_approved" string="Approve" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>