<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ncron_otification_ads_action_id" model="ir.cron">
        <field name="name">Notification Ads</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall"
               eval="(DateTime.now().replace(hour=2, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_ads_type"/>
        <field name="code">model.create_activities()</field>
        <field name="state">code</field>
    </record>


</odoo>



